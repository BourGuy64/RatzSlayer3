{% include 'header.html.twig' %}

<div class="mx-5 my-2">
    <form id="newChar" method="post" action="characters">

      <div class="form-row">
        <div class="col">
          <div class="md-form">
            <input type="text" id="firstname" class="form-control" required>
            <label for="firstname">First Name</label>
          </div>
        </div>

        <div class="col">
          <div class="md-form">
            <input type="text" id="lastname" class="form-control" required>
            <label for="lastname">Last Name</label>
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <div class="md-form">
            <input type="number" id="weight" class="form-control" min="1" max="100" required>
            <label for="weight">Weight</label>
          </div>
        </div>

        <div class="col">
          <div class="md-form">
            <input type="number" id="size" class="form-control" min="1" max="100" required>
            <label for="size">Size</label>
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <div class="md-form">
            <input type="number" id="hp" class="form-control" min="1" max="100" required>
            <label for="hp">HP</label>
          </div>
        </div>

        <div class="col">
          <div class="md-form">
            <input type="number" id="attack" class="form-control" min="1" max="100" required>
            <label for="attack">Attack</label>
          </div>
        </div>

        <div class="col">
          <div class="md-form">
            <input type="number" id="def" class="form-control" min="1" max="100" required>
            <label for="def">Def</label>
          </div>
        </div>

        <div class="col">
          <div class="md-form">
            <input type="number" id="agility" class="form-control" min="1" max="100" required>
            <label for="agility">Agility</label>
          </div>
        </div>
      </div>

      <div class="input-group">
          <div class="custom-file">
              <input type="file" id="img" name="img" class="custom-file-input"  aria-describedby="inputGroupFileAddon01">
              <label class="custom-file-label" for="img">Select image</label>
          </div>
      </div>

      <div class="d-flex justify-content-center">
        <button class="btn btn-primary" type="submit">Create</button>
      </div>
    </form>
</div>

{% include 'footer.html.twig' %}
