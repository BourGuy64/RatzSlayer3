{% extends 'base.html.twig' %}

{% block css %}
{{ parent() }}
<link href="{{dir}}/src/css/form.css" rel="stylesheet">
{% endblock %}

{% block main %}
<form id="newUser" method="post" action="users">

    <div class="nes-field">
        <label for="username">Username</label>
        <input type="text" id="username" class="nes-input">
    </div>

    <div class="nes-field">
        <label for="password">Password</label>
        <input type="text" id="password" class="nes-input">
    </div>

    <div class="nes-field">
        <label for="repeatPassword">Repeat password</label>
        <input type="text" id="repeatPassword" class="nes-input">
    </div>

    <div class="text-center">
        <button type="submit" class="nes-btn is-primary">Create user</button>
    </div>

</form>
{% endblock %}
