{% extends 'base.html.twig' %}

{% block css %}
{{ parent() }}
<link href="{{dir}}/src/css/fighters.css" rel="stylesheet">
{% endblock %}

{% block main %}

{% for fighter in fighters %}

    <div class="fighter {{fighterType}}">
        <img src="{{dir}}/src/img/fighters/{{fighter.picture}}" alt="img alt">

        {% if fighter.name %}
            <p class="name">{{fighter.name}}</p>
        {% else %}
            <p class="lastname">{{fighter.lastname}}</p>
            <p class="firstname">{{fighter.firstname}}</p>
        {% endif %}
        <p>{{fighter.weight}}</p>
        <p>{{fighter.size}}</p>
        <p>{{fighter.hp}}</p>
        <p>{{fighter.attack}}</p>
        <p>{{fighter.def}}</p>
        <p>{{fighter.agility}}</p>
        <p>{{fighter.agility}}</p>
        <i class="remove fas fa-trash-alt" data-id="{{fighter.id}}"></i>
    </div>
{% endfor %}

{% endblock %}
