{% extends 'fabric/base.html.twig' %}

{% block css %}
{{ parent() }}
<link href="{{dir}}/src/css/form.css" rel="stylesheet">
{% endblock %}

{% block main %}
<form id="editCar" method="post" action="characters/edit/{{fighter.id}}">

<img src="{{dir}}/src/img/fighters/{{fighter.picture}}" alt="img alt">

  {% if fighter.name %}
  <div class="nes-field">
      <label for="name">Name</label>
      <input type="text" id="name" class="nes-input" value="{{fighter.name}}" required>
  </div>
  {% else %}
  <div class="nes-field">
      <label for="lastname">Lastname</label>
      <input type="text" id="lastname" class="nes-input" value="{{fighter.lastname}}" required>
  </div>
  <div class="nes-field">
      <label for="firstname">Firstname</label>
      <input type="text" id="firstname" class="nes-input" value="{{fighter.firstname}}" required>
  </div>
  {% endif %}

    <div class="nes-field">
        <label for="weight">Weight</label>
        <input type="number" id="weight" min="1" max="999" class="nes-input" value="{{fighter.weight}}" required>
    </div>

    <div class="nes-field">
        <label for="size">Size</label>
        <input type="number" id="size" min="1" max="999" class="nes-input" value="{{fighter.size}}" required>
    </div>

    <div class="nes-field">
        <label for="hp">Health</label>
        <input type="number" id="hp" class="nes-input" min="1" max="999" value="{{fighter.hp}}" required>
    </div>

    <div class="nes-field">
        <label for="attack">Attack</label>
        <input type="number" id="attack" min="1" max="999" class="nes-input" value="{{fighter.attack}}" required>
    </div>

    <div class="nes-field">
        <label for="def">Defense</label>
        <input type="number" id="def" min="1" max="999" class="nes-input" value="{{fighter.def}}" required>
    </div>

    <div class="nes-field">
        <label for="Agility">Agility</label>
        <input type="number" id="agility" min="1" max="999" class="nes-input" value="{{fighter.agility}}" required>
    </div>

    <div class="custom-file">
        <input type="file" id="img" name="img" class="custom-file-input" aria-describedby="inputGroupFileAddon01">
        <label class="custom-file-label" for="img">Select image</label>
    </div>

    <div>
        <button type="submit" class="nes-btn is-primary">Update</button>
    </div>
</form>
{% endblock %}
