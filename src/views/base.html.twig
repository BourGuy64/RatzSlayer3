<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    {% block css %}
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <!-- Bootstrap core CSS -->
        <link href="{{dir}}/src/framework/mdbootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="{{dir}}/src/framework/mdbootstrap/css/mdb.min.css" rel="stylesheet">
        <!-- NES.css core CSS -->
        <link href="{{dir}}/src/framework/nescss/nes.min.css" rel="stylesheet">
        <!-- NES.css -->
        <link href="{{dir}}/src/framework/nescss/nes.min.css" rel="stylesheet">
        <!-- Your custom styles (optional) -->
        <link href="{{dir}}/src/css/style.css" rel="stylesheet">
    {% endblock %}

    {% block fonts %}
        <!-- FONTS -->
        <link href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap" rel="stylesheet">
    {% endblock %}

</head>

<body>

    <header>
        {% block header %}
        {% include "navbar.html.twig" %}
        {% endblock %}
    </header>

    <div id="main">
        {% block main %}
        {% endblock %}
    </div>

    <footer>
        {% block footer %}
        {% endblock %}
    </footer>

</body>
